        Initwar = pygame.draw.rect (screen, Red, (110, 110, 120, 50))
        screen.blit(font.render("Declare War", True, White), (110, 110))
        if war == "In progress":
            Attack = pygame.draw.rect(screen, (0, 50, 100), (400, 300, 400, 400))
