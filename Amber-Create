Day = (135, 206, 235)
Night = (25, 25, 112)
Times=(Day, Night)
Time=random.choice(Times)
screen.fill(Time)
working = True
yposition = yscreen / 2
xposition = xscreen / 2
setting = "residential"
boughthouse = 0
Inventory = []
InventoryAmount = len(Inventory)
money = 100  # start currency
civ_bank = 100000000000
population = 30
yspeed = 6
