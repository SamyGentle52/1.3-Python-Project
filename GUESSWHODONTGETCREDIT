'''''''''
# game loop
running=True

while running:
    for event in pygame.event.get():
        if event.type == pygame.KEYDOWN:
            bluestripes()

        if event.type == QUIT:
            running = False

    pygame.display.update()
    fps.tick (60)
    hey = start ()
    joker = puppies ()
