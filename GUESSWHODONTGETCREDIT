import random
import pygame, sys
from pygame.locals import *
pygame.init ()

lookitsamber=pygame.display.set_mode((1000, 1000), 0, 32)
pygame.display.set_caption("Pong")
mouse = pygame.mouse
fps = pygame.time.Clock ()

Amber_movespeed=30
ball_movespeed=3
# colors
Amber = (250, 245, 255)
Is = (255, 0, 0)
Awesome = (0, 255, 0)
Code=(100, 200, 200)
NoLight = (0, 0, 0)
Circle_Amber_radius=8
Position_AmberX=500
Position_AmberY=500
Amberhasskillz=80
AmberpaddleH=90
Thick=80
AmberpaddleW=Thick
robotballx=500
robotbally=500
computerpoint=0
playerpoint=0
ball_vel=0

def AmberTrademarktoomuch():
    global hello
    hello = pygame.draw.circle (lookitsamber, Code, [Position_AmberX, Position_AmberY], Circle_Amber_radius, 3)
    undermined= pygame.draw.line (lookitsamber, Amber, [10, Position_AmberY-AmberpaddleH],[10, Position_AmberY+AmberpaddleH], 5)
    nocredit = pygame.draw.line (lookitsamber, Amber, [990, robotbally-AmberpaddleH], [990, robotbally+AmberpaddleH], 5)
    memify = pygame.draw.circle (lookitsamber, Amber, [robotballx, robotbally], Circle_Amber_radius)

unknown=0
unknown2=0
def bluestripes():
    global unknown
    global unknown2
    global Position_AmberX
    global Position_AmberY
    down = unknown
    up = unknown
    left = unknown2
    right = unknown2
    pressed = pygame.key.get_pressed ()
    if pressed[pygame.K_DOWN]:
        print ("down is pressed")
        if unknown<500:
            unknown += Amber_movespeed
        elif unknown>500:
            unknown= unknown + Amber_movespeed
        Position_AmberY = down+500
        if Position_AmberY>=1000:
            Position_AmberY=500
        print (Position_AmberY)
    elif pressed[pygame.K_UP]:
        print ("up is pressed")
        if unknown>500:
            unknown -= Amber_movespeed
        elif unknown<=500:
            unknown = unknown - Amber_movespeed
        Position_AmberY = up+500
        if Position_AmberY<=0:
            Position_AmberY=500
        print (Position_AmberY)
    elif pressed[pygame.K_RIGHT]:
        print ("right is pressed")
        if unknown2<500:
            unknown2 += Amber_movespeed
        elif unknown2>=500:
            unknown2 = unknown2 + Amber_movespeed
        if Position_AmberX>=1000:
            Position_AmberX=500
        Position_AmberX = right+500
        print (Position_AmberX)
    elif pressed[pygame.K_LEFT]:
        print ("left is pressed")
        if unknown2>500:
            unknown2 -= Amber_movespeed
        elif unknown2<=500:
            unknown2 = unknown2 - Amber_movespeed
        Position_AmberX = left+500
        if Position_AmberX>=1000:
            Position_AmberX=500
        print (Position_AmberX)
    else:
        Position_AmberX=500
        Position_AmberY=500
    AmberTrademarktoomuch()
def endgame():
    print("gameover")
    running=False

def puppies():
    global computerpoint
    global playerpoint
    global robotballx
    global robotbally
    global space
    if space ==0:
        while robotballx < 1000:
            robotballx += 1
            AmberTrademarktoomuch ()
        if robotballx >= 1000:
            robotballx = 500
            playerpoint = +1
        if robotballx <= 0:
            robotballx = 500
            computerpoint = +1
        if playerpoint == 10:
            endgame ()
        if computerpoint == 10:
            endgame ()
        AmberTrademarktoomuch ()

    '''''''''
    robotballx += (ball_vel[0])
    robotballx += (ball_vel[1])
    robotbally +=(ball_vel[0])
    robotbally +=(ball_vel[1])
    position = player.get_rect()
>>> screen.blit(player, position)          #draw the player
>>> pygame.display.update()                #and show it all
>>> for x in range(100):                   #animate 100 frames
...     screen.blit(background, position, position) #erase
...     position = position.move(2, 0)     #move player
...     screen.blit(player, position)      #draw new player
...     pygame.display.update()            #and show it all
...     pygame.time.delay(100)       # pause for 1/10 a second
    '''''
def start():
    lookitsamber.fill(NoLight)
    pygame.draw.line(lookitsamber, Awesome, [1000 / 2, 0],[1000 / 2, 1000], 1)
    pygame.draw.line(lookitsamber, Awesome, [AmberpaddleW, 0],[AmberpaddleW, 1000], 1)
    pygame.draw.line(lookitsamber, Awesome, [1000-AmberpaddleW, 0],[1000 - AmberpaddleW, 1000], 1)
    pygame.draw.rect(lookitsamber, Awesome,  [300, 1000 / 2, 400, 100],3)
    hello = pygame.draw.circle (lookitsamber, Amber, [50, 50], Circle_Amber_radius, )
    AmberTrademarktoomuch ()
    puppies()

def goodmorning():
    global space
    pressed = pygame.key.get_pressed ()
    if pressed[pygame.K_SPACE]:
        if space==0:
            space=1
        elif space == 1:
            space = 0

''''''''''
    K_UP
    K_DOWN
    K_RIGHT
    K_LEFT
'''''''''
# game loop
running=True

while running:
    for event in pygame.event.get():
        if event.type == pygame.KEYDOWN:
            bluestripes()

        if event.type == QUIT:
            running = False

    pygame.display.update()
    fps.tick (60)
    hey = start ()
    joker = puppies ()
    lol=goodmorning()
